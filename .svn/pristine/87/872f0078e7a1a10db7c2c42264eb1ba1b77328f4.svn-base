* {
    margin: 0;
    padding: 0;
}

a {
    color: blue;
    text-decoration: none;
}

img {
    max-width: 100%;
}

body {
    font-size: 16px;
    font-style: normal;
    font-family: "Times New Roman";
    text-align: center;
    color: black;
    border-width: 10px;
    border-style: solid;
    border-color: #2d72d9;
}

.container {
    margin-top: 52px;
    max-width: 768px;
    margin-left: auto;
    margin-right: auto;
}

ul > li {
    list-style-type: none;
    display: inline-block;

}

.site-header {
    color: #877d7c;
    background-color: white;
    overflow: hidden;

}

.site-nav {
    float: right;
}


.site-nav .active a {
    color: red;
}

.site-nav li {
    display: inline;
}

.site-nav li a {
    text-decoration: none;
}

.site-nav li:hover a {
    text-decoration: underline;
}

.site-title {
    float: left;
    color: black;
}

.site-footer {
    margin-top: 52px;
    border-bottom: 1px solid #bcc2be;
    border-top: 1px solid #bcc2be;
    height: 180px;
}

.Foreword {
    font-style: italic;
    font-family: "Times New Roman";
    margin-top: 50px;
    font-size: 26px;
    text-align: center;
    color: #877d7c;

}

.div_line {
    margin-top: 40px;
    border-bottom: 1px solid #bcc2be;
}

.time {
    font-size: 14px;
    color: #877d7c;
}

.Title_Posts {
    margin-top: 23px;
    font-size: 35px;
}
.Title_Posts a {
    color: black;
    text-decoration: none;
}

.article_link {
    margin-top: 28px;
    margin-bottom: 23px;
    font-size: 15px;
    color: #877d7c;
}

.article_content {
    margin-top: 28px;
    margin-bottom: 28px;
    font-size: 18px;
    color: #877d7c;
}

.Continue_one {
    margin-top: 28px;
    margin-bottom: 42px;
    font-size: 20px;
    font-weight: bolder;
}

.Posts {
    text-align: left;
    margin-top: 64px;
    border-bottom: 1px solid #bcc2be;
}

.Page {
    text-align: center;
    margin-top: 48px;
    border-bottom: 1px solid #bcc2be;
}

.div5 {
    float: inherit;
    margin-bottom: 52px;
    font-size: 18px;
    font-style: normal;
    color: #877d7c;
    display: inline-block;
    max-width: 87%;

}

.Older_posts {
    display: inline-block;
}

.icon {
    margin-top: 32px;
    margin-bottom: 32px;
    text-align: left;
}

.sb {
    margin-bottom: 22px;
    display: inline-block;
    color: #877d7c;
    height: 40px;
    max-width: 40px;

}



@media (max-width: 768px) {
    .Title_Posts {
        margin-top: 10px;
        font-size: 22px;
    }

    .Posts {
        margin-top: 34px;
    }
}
